{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,  /* Enable strict checking of property initialization in classes. */
    "target": "es6",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "sourceMap": false,
    "lib": []
  },
  "exclude": [
    "__mocks__",
    "dist",
    "node_modules",
    "src/**/__tests__/*"
  ]
}